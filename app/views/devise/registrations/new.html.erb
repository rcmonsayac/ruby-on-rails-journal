<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="validations">
    <ul>
        <li><%=  resource.errors.full_messages[0] %></li>
    </ul>
  </div>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", required: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", required: true, placeholder: @minimum_password_length.nil? ? "Password" : "Password(#{@minimum_password_length} characters minimum)" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, placeholder: "Confirm Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "login" %>
  </div>
<% end %>
<p>Already have and account? Login <%= link_to 'here.', new_user_session_path %></p>
