
<h4>Create new - <%= @category.name %> Task</h4>
<%= form_with model: [@category, @task], local: true, method: :post do |f|  %>
  <p>
    <% if @task.errors.any? %>
      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    <% end %>     
  </p>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :deadline %>
    <%= f.datetime_field :deadline %>
  </p>
  <p>
    <%= f.submit 'Create', class: 'button' %>
    <%=  link_to 'Cancel', category_tasks_path(@category.id), method: :get, class: 'button' %>
  </p>
  <% end %>