<h2>Tasks - <%= @category.name %></h2>
<div class="section">
    <div class="tasks-list">
        <div>
            <%= link_to '+ New Task', new_category_task_path(@category.id), method: :get, class: 'button' %>
            
        </div>
        <% if @started_tasks.any? %>
            <h3>
                Started
            </h3>
            <% @started_tasks.each do |task| %>
                <div class="list-task-item">
                    <span><%= link_to task.title, category_task_path(@category.id, task.id), method: :get %></span>
                    <span><%= task.description %></span>
                    <span>Started at <%= task.started_at %></span> 
                    <span><%= link_to 'Edit', edit_category_task_path(@category.id, task.id), method: :get, class: 'button' %></span>
                </div>
            <% end %>
        <% end %> 
        <% if @pending_tasks.any? %>
            <h3>
                Pending
            </h3>
            <% @pending_tasks.each do |task| %>
                <div class="list-task-item">
                    <span><%= link_to task.title, category_task_path(@category.id, task.id), method: :get %></span>
                    <span><%= task.description %></span>
                    <span><%= link_to 'Edit', edit_category_task_path(@category.id, task.id), method: :get, class: 'button' %></span>
                </div>
            <% end %>
        <% end %>
        <% if @completed_tasks.any? %>
            <h3>
                Completed
            </h3>
            <% @completed_tasks.each do |task| %>
                <div class="list-task-item">
                    <span><%= link_to task.title, category_task_path(@category.id, task.id), method: :get %></span>
                    <span><%= task.description %></span>
                    <span>Completed at <%= task.completed_at %></span> 
                    <span><%= link_to 'Edit', edit_category_task_path(@category.id, task.id), method: :get, class: 'button' %></span>
                </div>
            <% end %>
        <% end %>
    </div>
</div>






